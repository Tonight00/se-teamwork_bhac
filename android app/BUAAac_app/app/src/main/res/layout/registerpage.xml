<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context=".register"
                    android:background="@mipmap/bkg">

        <TextView
                android:layout_marginTop="60dp"
                android:id="@+id/reg_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="用户名:"
                android:textColor="#000"
                android:textSize="20dp" />
        <EditText
                android:id="@+id/reg_username"
                android:layout_alignBottom="@+id/reg_number1"
                android:layout_toRightOf="@+id/reg_number1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />
        <TextView
                android:id="@+id/reg_number2"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_number1"
                android:padding="10dp"
                android:text="密码:"
                android:textColor="#000"
                android:textSize="20dp" />
        <EditText
                android:id="@+id/reg_password"
                android:layout_alignBottom="@id/reg_number2"
                android:layout_toRightOf="@+id/reg_number2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />
        <TextView
                android:id="@+id/reg_number3"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_number2"
                android:padding="10dp"
                android:text="重复密码:"
                android:textColor="#000"
                android:textSize="20dp" />
        <EditText
                android:id="@+id/reg_password2"
                android:layout_alignBottom="@id/reg_number3"
                android:layout_toRightOf="@+id/reg_number3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />

        <TextView
                android:id="@+id/reg_number4"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_number3"
                android:padding="10dp"
                android:text="电话:"
                android:textColor="#000"
                android:textSize="20dp" />
        <EditText
                android:id="@+id/reg_phoneNum"
                android:layout_alignBottom="@id/reg_number4"
                android:layout_toRightOf="@+id/reg_number4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:hint="选填"
                android:textColorHint="#BEBEBE"
                android:textSize="20dp"/>
        <TextView
                android:id="@+id/reg_number5"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_number4"
                android:padding="10dp"
                android:text="邮箱:"
                android:textColor="#000"
                android:textSize="20dp" />
        <EditText
                android:id="@+id/reg_email"
                android:layout_alignBottom="@id/reg_number5"
                android:layout_toRightOf="@+id/reg_number5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:hint="选填"
                android:textColorHint="#BEBEBE"
                android:textSize="20dp"/>

        <TextView
                android:id="@+id/reg_number6"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_number5"
                android:padding="10dp"
                android:text="姓:"
                android:textColor="#000"
                android:textSize="20dp" />
        <EditText
                android:id="@+id/reg_firstName"
                android:layout_alignBottom="@id/reg_number6"
                android:layout_toRightOf="@+id/reg_number6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:hint="选填"
                android:textColorHint="#BEBEBE"
                android:textSize="20dp"/>

        <TextView
                android:id="@+id/reg_number7"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_number6"
                android:padding="10dp"
                android:text="名:"
                android:textColor="#000"
                android:textSize="20dp" />
        <EditText
                android:id="@+id/reg_lastName"
                android:layout_alignBottom="@id/reg_number7"
                android:layout_toRightOf="@+id/reg_number7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:hint="选填"
                android:textColorHint="#BEBEBE"
                android:textSize="20dp"/>

        <TextView
                android:id="@+id/reg_number8"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_number7"
                android:padding="10dp"
                android:text="学号:"
                android:textColor="#000"
                android:textSize="20dp" />

        <EditText
                android:id="@+id/reg_studentId"
                android:layout_alignBottom="@id/reg_number8"
                android:layout_toRightOf="@+id/reg_number8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="-2dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:hint="选填"
                android:textColorHint="#BEBEBE"
                android:textSize="20dp"/>
        <TextView
                android:id="@+id/reg_number9"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_number8"
                android:padding="10dp"
                android:text="性别:"
                android:textColor="#000"
                android:textSize="20dp" />
        <EditText
                android:id="@+id/reg_gender"
                android:layout_alignBottom="@id/reg_number9"
                android:layout_toRightOf="@+id/reg_number9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:hint="选填"
                android:textColorHint="#BEBEBE"
                android:textSize="20dp"/>


        <Button
                android:id="@+id/reg_btn_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定注册"
                android:background="@drawable/selector1"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/reg_gender"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="10dp"/>

        <Button
                android:id="@+id/reg_btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回登录"
                android:background="@drawable/selector2"
                android:layout_alignBottom="@id/reg_btn_sure"
                android:layout_toRightOf="@id/reg_btn_sure"
                android:layout_marginLeft="60dp"
        />


    </RelativeLayout>



</ScrollView>
