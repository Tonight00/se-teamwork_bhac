<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="16dp"
             android:paddingRight="16dp"
             android:paddingTop="16dp"
             android:paddingBottom="16dp"
             tools:context="com.shakespace.template.fragment.OneFragment">

    <LinearLayout
        android:id="@+id/dasdadsa1213"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/dsadfw2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/dasdadsa1213">

        <EditText
            android:id="@+id/f1_getactivities_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="请输入关键词"
            android:textSize="20dp"
            android:layout_below="@+id/dasdadsa1213"
            android:layout_weight="3"/>

        <Spinner
            android:id="@+id/f1_tag_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </Spinner>

        <Button
            android:id="@+id/fg1_search_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/f1_tag_spinner"
            android:background="@drawable/selector1"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="26dp"
            android:layout_weight="1"/>

    </LinearLayout>



    <Button
        android:id="@+id/cainixihuan"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector1"
        android:text="找不到想要的？点这里"
        android:layout_below="@+id/dsadfw2"
        android:textColor="#ffffff"
        android:textSize="20dp" />



    <ListView
        android:id="@+id/fg1_activities_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cainixihuan">
    </ListView>



</RelativeLayout>
