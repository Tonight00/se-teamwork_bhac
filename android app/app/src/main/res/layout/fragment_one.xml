<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="16dp"
             android:paddingRight="16dp"
             android:paddingTop="16dp"
             android:paddingBottom="16dp"
             tools:context="com.shakespace.template.fragment.OneFragment">

    <LinearLayout
        android:id="@+id/dasdadsa1213"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thisisone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="与服务器连接失败"/>

        <Button
            android:id="@+id/fg1_fabu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector4"
            android:text="发布"
            android:textColor="#ffffff"
            android:textSize="30dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/dsadfw2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/dasdadsa1213">

        <EditText
            android:id="@+id/f1_getactivities_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="请输入关键词"
            android:textSize="30dp"
            android:layout_below="@+id/dasdadsa1213"/>

        <Spinner
            android:id="@+id/f1_tag_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>

        <Button
            android:id="@+id/fg1_search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/f1_tag_spinner"
            android:background="@drawable/selector1"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="30dp" />

    </LinearLayout>









    <ListView
        android:id="@+id/fg1_activities_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dsadfw2">
    </ListView>



</RelativeLayout>
