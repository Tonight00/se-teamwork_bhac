<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".in_fragment4.register">

        <TextView
            android:layout_marginTop="60dp"
            android:id="@+id/reg_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="用户名:"
            android:textColor="#000"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/reg_username"
            android:layout_alignBottom="@+id/reg_number1"
            android:layout_toRightOf="@+id/reg_number1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />
        <TextView
            android:id="@+id/reg_number2"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_number1"
            android:padding="10dp"
            android:text="密码:"
            android:textColor="#000"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/reg_password"
            android:layout_alignBottom="@id/reg_number2"
            android:layout_toRightOf="@+id/reg_number2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />
        <TextView
            android:id="@+id/reg_number3"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_number2"
            android:padding="10dp"
            android:text="重复密码:"
            android:textColor="#000"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/reg_password2"
            android:layout_alignBottom="@id/reg_number3"
            android:layout_toRightOf="@+id/reg_number3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_number3"
            android:text="显示密码"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/reg_number4"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox1"
            android:padding="10dp"
            android:text="电话:"
            android:textColor="#000"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/reg_phoneNum"
            android:layout_alignBottom="@id/reg_number4"
            android:layout_toRightOf="@+id/reg_number4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="2dp"
            android:hint="选填"
            android:textColorHint="#BEBEBE"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/reg_number5"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_number4"
            android:padding="10dp"
            android:text="邮箱:"
            android:textColor="#000"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/reg_email"
            android:layout_alignBottom="@id/reg_number5"
            android:layout_toRightOf="@+id/reg_number5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="选填"
            android:textColorHint="#BEBEBE"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/reg_number6"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_number5"
            android:padding="10dp"
            android:text="姓:"
            android:textColor="#000"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/reg_lastName"
            android:layout_alignBottom="@id/reg_number6"
            android:layout_toRightOf="@+id/reg_number6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="选填"
            android:textColorHint="#BEBEBE"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/reg_number7"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_number6"
            android:padding="10dp"
            android:text="名:"
            android:textColor="#000"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/reg_firstName"
            android:layout_alignBottom="@id/reg_number7"
            android:layout_toRightOf="@+id/reg_number7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="选填"
            android:textColorHint="#BEBEBE"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/reg_number8"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_number7"
            android:padding="10dp"
            android:text="学号:"
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/reg_studentId"
            android:layout_alignBottom="@id/reg_number8"
            android:layout_toRightOf="@+id/reg_number8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginBottom="0dp"
            android:hint="选填"
            android:textColorHint="#BEBEBE"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/reg_number9"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_number8"
            android:padding="10dp"
            android:text="性别:"
            android:textColor="#000"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/genderswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/reg_number9"
            android:layout_toRightOf="@+id/reg_number9"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textSize="@dimen/text_20_sp" />
            <RadioButton
                android:id="@+id/woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="@dimen/text_20_sp"/>
            <RadioButton
                android:id="@+id/unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保密"
                android:textSize="@dimen/text_20_sp"
                android:checked="true"/>
        </RadioGroup>


        <Button
            android:id="@+id/reg_btn_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/genderswitch"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector1"
            android:text="完成注册"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/reg_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_btn_sure"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/selector2"
            android:text="已有账号，返回"
            android:textColor="#ffffff"
            android:textSize="20dp"/>




    </RelativeLayout>



</ScrollView>
